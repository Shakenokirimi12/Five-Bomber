<Page x:Class="Five_Bomber.Pages.Lobby"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Five_Bomber.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Lobby" Unloaded="Page_Unloaded">

    <Grid>
        <Viewbox>
            <Grid>
                <Image x:Name="BackGround_Lobby" Source="/BackGround_Lobby.jpg" Stretch="Fill" Margin="10,0,10,0" MouseLeftButtonDown="BackGround_Lobby_MouseLeftButtonDown"/>
                <Label x:Name="Label_Lobby" Content="Waiting for start...." HorizontalAlignment="Center" Margin="0,821,0,0" VerticalAlignment="Top" FontSize="75" Foreground="Black" Loaded="Label_Lobby_Loaded"/>
                <Label x:Name="IPaddress" Content="IP:" HorizontalAlignment="Left" Margin="1265,0,0,0" VerticalAlignment="Top" FontSize="75" Foreground="Black"/>

            </Grid>
        </Viewbox>
    </Grid>
</Page>
